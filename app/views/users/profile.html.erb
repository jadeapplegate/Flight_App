<!-- if current user, display form for adding a contact -->
<% if current_user %>
	<h1><%= current_user.full_name.titleize %></h1><br>
	<div class="instructions ">
		<h4>Add a new contact:</h4>
	</div>
	<h2><%= flash[:error] %></h2>

	<div class='clearfix'>
		<div class="add_contact_form col-md-6">
			<%= form_for @contact, :html => {:id => "contact_form"} do |f| %>
		  	<div class="col-md-3">
		 		 	<%= f.label "First Name:" %>
		  	</div>
		  	<div class="col-md-9">
		 	  	<%= f.text_field "first_name", placeholder: "Mickey", class:'form_field' %>
			  </div>
		  	<div class="col-md-3">
				  <%= f.label "Last Name:" %>
		  	</div>
		  	<div class="col-md-9">
				  <%= f.text_field "last_name", placeholder: "Mouse", class:'form_field' %>
				</div>
		  	<div class="col-md-3">
			  	<%= f.label "Email:" %>
		  	</div>
		  	<div class="col-md-9">
			  	<%= f.text_field "email", placeholder: "mickey@mouse.com", class:'form_field' %>
			  </div>
		  	<div class="col-md-3">
				  <%= f.label "Phone:" %>
		  	</div>
		  	<div class="col-md-9">
				  <%= f.telephone_field "phone", placeholder: "ex: 4151234567", class:'form_field' %>
				</div>
		  	<div class="col-md-3">
				</div>
			 	<div class="contact_submit col-md-9">	
		  		<%= f.submit class: 'btn btn-primary btn-sm rounded', id: "contactButton" %>
		    </div>
			<% end %>
		</div>
		<div class="panel panel-primary col-md-6" id="contacts_list" >
			<div class="panel-heading" id="contacts_list">
				<div class="some-padding">
					Your Contacts:
				</div>
			</div>
			<div class="some-padding">
				<% @contacts.each do |contact| %>
					<strong><%= contact.full_name %></strong>
					<%= contact.email %><br>
				<% end %>
			</div>
		</div>
	<div class="panel panel-primary" id="flights_list">
		<div class="panel-heading" id="flights_list">Your Flights:</div>
			<div class="some-more-padding">
				<% @flights.each do |flight| %>
					<strong><%= flight.airline_name -%> :
					<%= flight.flight_number -%> -</strong>
					<%= flight.date_month -%> /
					<%= flight.date_day -%>/
					<%= flight.date_year -%>, 
					<%= flight.departure_airport -%> to 
					<%= flight.arrival_airport -%></br>
				<% end %>
			</div>	
		</div>
	</div>

	<!-- if no current user, prompt to sign in or sign up -->
<% else %> 
	<h1> Please sign up or sign in to view this page </h1>
<% end %>




